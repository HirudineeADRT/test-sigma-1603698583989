{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template creates the stack for project test. Generated by Sigma",
  "Parameters": {
    "lambdaCodeBucketParameter": {
      "Type": "String",
      "Description": "Name of the S3 bucket containing the Lambda deployment package"
    },
    "lambdaCodeKeyParameter": {
      "Type": "String",
      "Description": "S3 key of the Lambda deployment package"
    }
  },
  "Outputs": {
    "test": {
      "Description": "ARN of Lambda function test",
      "Value": {
        "Fn::GetAtt": [
          "test",
          "Arn"
        ]
      }
    }
  },
  "Resources": {
    "s3sigmahirutest": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "sigmahirutest",
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Filter": {
                "S3Key": {
                  "Rules": [
                    {
                      "Name": "prefix",
                      "Value": "test"
                    },
                    {
                      "Name": "suffix",
                      "Value": ".txt"
                    }
                  ]
                }
              },
              "Event": "s3:ObjectCreated:*",
              "Function": {
                "Fn::GetAtt": [
                  "test",
                  "Arn"
                ]
              }
            }
          ]
        }
      }
    },
    "test": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "test",
        "Description": "Invokes functions defined in test.js in project test. Generated by Sigma.",
        "Code": {
          "S3Bucket": {
            "Ref": "lambdaCodeBucketParameter"
          },
          "S3Key": {
            "Ref": "lambdaCodeKeyParameter"
          }
        },
        "MemorySize": 128,
        "Handler": "test.handler",
        "Timeout": 60,
        "Runtime": "nodejs10.x",
        "Layers": [],
        "TracingConfig": {
          "Mode": "PassThrough"
        },
        "Role": {
          "Fn::GetAtt": [
            "testExecutionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SIGMA_AWS_ACC_ID": {
              "Ref": "AWS::AccountId"
            }
          }
        }
      }
    },
    "testExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "testPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "SES:SendEmail",
                    "SES:SendRawEmail"
                  ],
                  "Resource": [
                    "arn:aws:ses:us-west-2:947563669548:identity/hirudineel@gmail.com",
                    "arn:aws:ses:us-west-2:947563669548:identity/hirudinee@adroitlogic.com"
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "s3sigmahirutestPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Ref": "test"
        },
        "SourceArn": "arn:aws:s3:::sigmahirutest",
        "Principal": "s3.amazonaws.com"
      }
    }
  }
}